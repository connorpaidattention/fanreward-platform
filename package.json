{
  "name": "fanreward-platform",
  "version": "1.0.0",
  "description": "Complete full-stack music fan engagement platform that rewards users for listening to music across Spotify, YouTube, and Instagram",
  "main": "backend/server.js",
  "scripts": {
    "start": "node backend/server.js",
    "dev": "nodemon backend/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint backend/ --ext .js",
    "lint:fix": "eslint backend/ --ext .js --fix",
    "seed": "node backend/scripts/seedData.js",
    "seed:force": "node backend/scripts/seedData.js --force",
    "build": "echo 'No build step required for Node.js app'",
    "postinstall": "echo 'Dependencies installed successfully'",
    "health": "curl http://127.0.0.1:3000/api/health || echo 'Server not running'",
    "reset:db": "node -e \"const mongoose = require('mongoose'); mongoose.connect(process.env.MONGODB_URI || 'mongodb://127.0.0.1:27017/fanreward').then(() => mongoose.connection.db.dropDatabase()).then(() => {console.log('Database cleared'); process.exit(0);});\"",
    "production": "NODE_ENV=production node backend/server.js"
  },
  "keywords": [
    "music",
    "rewards",
    "spotify",
    "youtube",
    "instagram",
    "oauth",
    "points",
    "engagement"
  ],
  "author": "FanReward Platform",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.5.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "connect-mongo": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.8.1",
    "express-session": "^1.18.2",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.0",
    "morgan": "^1.10.0",
    "node-cron": "^3.0.2",
    "passport": "^0.6.0",
    "passport-facebook": "^3.0.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-spotify": "^2.0.0",
    "socket.io": "^4.7.2",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "eslint": "^8.47.0",
    "jest": "^29.6.2",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
