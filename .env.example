# Server Configuration
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://127.0.0.1:8080
ADMIN_URL=http://127.0.0.1:8081

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/fanreward-platform
MONGODB_TEST_URI=mongodb://localhost:27017/fanreward-platform-test

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-change-in-production
JWT_EXPIRES_IN=7d

# Spotify OAuth (IMPORTANT: Use 127.0.0.1 for new security requirements)
SPOTIFY_CLIENT_ID=your-spotify-client-id
SPOTIFY_CLIENT_SECRET=your-spotify-client-secret
SPOTIFY_REDIRECT_URI=http://127.0.0.1:3000/api/auth/spotify/callback

# Google/YouTube OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://127.0.0.1:3000/api/auth/google/callback

# Facebook/Instagram OAuth
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
FACEBOOK_REDIRECT_URI=http://127.0.0.1:3000/api/auth/facebook/callback

# Session Configuration
SESSION_SECRET=your-super-secure-session-secret-change-in-production

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Cron Jobs
ENABLE_BACKGROUND_JOBS=true
REWARD_CALCULATION_INTERVAL=30000

# Admin Configuration
ADMIN_EMAIL=admin@fanreward.com
ADMIN_PASSWORD=SecureAdminPassword123!

# Production URLs (for deployment)
# FRONTEND_URL=https://your-app.vercel.app
# ADMIN_URL=https://your-admin.vercel.app
# BACKEND_URL=https://your-api.herokuapp.com